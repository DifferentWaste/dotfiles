{
    "layer": "top",
    "position": "top",
    "modules-left": ["hyprland/workspaces", "disk", "memory", "cpu"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["clock", "temperature", "pulseaudio", "network", "battery"],
    "hyprland/workspaces": {
         "format": "{icon}",
         "on-click": "activate",
         "format-icons": {
         "1": "",
         "2": "",
         "3": "",
         "4": "",
         "5": "",
         "urgent": "",
         "active": "",
         "default": ""
      },
         "sort-by-number": true
    },
    "disk": {
    "interval": 30,
    "format": "{percentage_free}% remaining on {path}",
    "path": "/"
},
    "cpu": {
    "interval": 10,
    "format": "{usage}%",
    "max-length": 10
    },
    "temperature": {
    //"thermal-zone": 2,
     "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    // "critical-threshold": 80,
    // "format-critical": "{temperatureF}°F ",
    "format": "{temperatureF}°F"
},
    "memory": {
    "interval": 30,
    "format": "{}%",
    "max-length": 10
     },
    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%a %b %d %H:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "on-click-right": "mode",
                    "format": {
                              "months":     "<span color='#c5c8c6'><b>{}</b></span>",
                              "days":       "<span color='#c5c8c6'><b>{}</b></span>",
                              "weeks":      "<span color='#c5c8c6'><b>{}</b></span>",
                              "weekdays":   "<span color='#c5c8c6'><b>{}</b></span>",
                              "today":      "<span color='#ff1a1a'><b><u>{}</u></b></span>"
                              },
    },
    },
    "battery": {
        "interval": 60,
		"states": {
		    "full": 99,
			"good": 75,
			"warning": 30,
			"critical": 15
		},
		"format": "{capacity}% {icon}",
		"format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
		"format-icons": ["", "", "", "", ""],
		"max-length": 25
    },
    "network": {
        "format": "{ifname}",
        "format-alt": "{bandwidthDownBytes}/{bandwidthUpBytes}",
        "format-wifi": " {essid}",
        "format-ethernet": " {ifname}",
        "format-disconnected": "",
        "tooltip-format-wifi": "{bandwidthDownBits},{bandwidthUpBits}",
        "max-length": 20
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} {volume}%",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "default": ["", ""]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },
}
